<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <Button
        android:id="@+id/item_busflow_button_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:background="@color/ivory"
        android:focusable="false"
        android:text="Button"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_busflow_textView_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_busflow_button_time"
        android:layout_alignBottom="@+id/item_busflow_button_time"
        android:layout_toRightOf="@+id/item_busflow_button_time"
        android:layout_marginLeft="25dp"
        android:layout_toLeftOf="@+id/item_busflow_imageView"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/item_busflow_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_busflow_button_time"
        android:layout_alignBottom="@+id/item_busflow_button_time"
        android:layout_marginRight="20dp"
        android:src="@android:drawable/ic_menu_edit" />
   
</RelativeLayout>